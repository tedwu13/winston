<%= render 'shared/errors', obj: @user %>

<div class='row'>
  <div class="col-xs-12">
    <%= form_for(@user, :html => {class: "form-horizontal", role: "form"}) do |f| %>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :username %>
        </div>
        <div class="col-sm-8">
          <%= f.text_field :username, class: "form-control", placeholder: "Enter username", autofocus: true %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :email %>
        </div>
        <div class="col-sm-8">
          <%= f.email_field :email, class: "form-control", placeholder: "Enter email" %>
        </div>
      </div>
      <% if @user.is_expert? %>
        <div class="form-group">
          <div class="control-label col-sm-2">
            <%= f.label :university %>
          </div>
          <div class="col-sm-8">
            <%= f.text_field :university, class: "form-control", placeholder: "Enter your college/university" %>
          </div>
        </div>
      <% end %>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :phone_number %>
        </div>
        <div class="col-sm-8">
          <%= f.text_field :phone_number, class: "form-control", placeholder: "Enter your phone number" %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :password %>
        </div>
        <div class="col-sm-8">
          <%= f.password_field :password, class: "form-control", placeholder: "Enter password" %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-8 col-sm-offset-2">
          <%= f.submit(@user.new_record? ? "Sign up" : "Update your account", class: "btn btn-primary btn-lg") %>
        </div>
      </div>
    <% end %>
  </div>
</div>
