<div class="container">
  <div class="col-sm-8 col-sm-offset-2">
    <div align="center">
      <h3 class="login-header">Reset your password!</h3>
      <h4 class="login-description">Reset your password, and you're on your way.</h4>
    </div>
  </div>

  <div class="col-xs-12 login-spacer">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), :html => {method: :put, class: "form-horizontal", role: "form"}) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.hidden_field :reset_password_token %>

      <div class="form-group">
        <div class="col-sm-4 col-sm-offset-4">
          <%= f.password_field :password, autofocus: true, autocomplete: "new-password", placeholder: "New Password", class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-4 col-sm-offset-4">
          <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Confirm Password", class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-4 col-sm-offset-4">
          <%= f.submit('Confirm', class: "btn btn-block register-button") %>
        </div>
      </div>
    <% end %>
  </div>
</div>
