<div align="center">
  <%= form_tag('/answers', method: 'post', id: 'intake-survey') do %>
    <% @qna.each do |questionAndAnswer| %>
      <h2><%= label_tag(questionAndAnswer[:question_id], questionAndAnswer[:question]) %></h2>
      </br>
      <%= text_area_tag(questionAndAnswer[:question_id], questionAndAnswer[:answer], size: '100x10') %>
      </br>
    <% end %>
    <%= hidden_field_tag('questions_list', @questions_list) %>
    <%= button_tag('Save Draft', type: 'button', class: 'draft') %>
    <%= button_tag('Submit', type: 'button', class: 'submit') %>
  <% end %>
</div>